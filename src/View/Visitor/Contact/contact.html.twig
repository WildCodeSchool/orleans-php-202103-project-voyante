{% extends 'Visitor/layout.html.twig' %}

{% block stylesheet %}
{{ parent()}}
<link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}

{% block content %}
    <form action="/contact/index" class="form" method= "POST">
        <h2 class="contact-me">Contactez-moi</h2>
        <div class="row">
            <div class="col-xs-12 col-sm-6-ml-3">
                <img src='/assets/images/phone-form.png' alt='telephone' class='phone-number'>
            </div>
        </div>
        {% if errors %}
            <ul class="errors-ul">
            {% for error in errors %}
                <li class="errors">{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
        <div class="info">
            <label for="name">Nom complet :</label>
            <input id="name" type="text" name="name" placeholder="Nom complet" value="{{ data.name }}" required>
            <label for="email">Adresse mail :</label>
            <input id="email" type="text" name="email" placeholder="exemple@exemple.com" value="{{ data.email }}" required>
            <label for="tel">Numéro de téléphone :</label>
            <input id="tel" type="tel" name="tel" size="14" placeholder="00 00 00 00 00" value="{{ data.tel }}" required>
            <label for="subject">Sujet : </label>
            <select class="subject" name="subject" id="subject">
            {% for labelSubject in labelSubjects %}
                {% if activeLabel == loop.index %}
                    <option selected value={{ loop.index }}>{{ labelSubject }}</option>
                {% else %}
                    <option value={{ loop.index }}>{{ labelSubject }}</option> 
                {% endif %}       
            {% endfor %}
            </select>
        </div>
        <div>
            <label for="message">Votre message :</label>
            <textarea name="message" id="message" rows="4" placeholder="Votre message" required>{{- data.message -}}</textarea>
        </div>
        <div class="button-contact">
            <button class="send" type="submit">Envoyer</button>
        </div>
    </form>
{% endblock %}
